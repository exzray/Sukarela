<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/cardevent_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                android:scaleType="center" />

            <TextView
                android:id="@+id/cardevent_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/cardevent_image"
                android:layout_alignRight="@id/cardevent_image"
                android:layout_marginTop="8dp"
                android:background="@color/orange_700"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:text="Completed"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/cardevent_title"
            style="@style/AppTheme.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamatkan penyu Malaysia daripada ancaman kepupusan"
            android:textAlignment="center" />

        <include layout="@layout/my_divider" />

        <LinearLayout
            android:id="@+id/cardevent_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INFORMATION"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:id="@+id/cardevent_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="Lokasi Pantai Kelebang, Melaka" />

                <TextView
                    android:id="@+id/cardevent_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="Tarikh 12/12/2018" />

                <TextView
                    android:id="@+id/cardevent_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="Masa 12:59:59 pm" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardevent_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/cardevent_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Detail" />

            <Button
                android:id="@+id/cardevent_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="cancel" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>